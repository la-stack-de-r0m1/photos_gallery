{% extends 'base.html.twig' %}

{% block title %}Photo Gallery admin{% endblock %}

{% block body %}
<style>
    .simple-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .simple-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="simple-wrapper">
    {% if newTag is defined %}
        <div class="alert alert-success">
           âœ… Tag <strong>{{ newTag.name }}</strong> successfully created!
        </div>
    {% endif %}

    <h1>Hello, {{ app.user.username }} ! </h1>
    <p>You're the boss in this place.</p>
    <hr>
    <h4>Existing tags</h4>
    <p>
        {% for tag in tags %}
            #{{ tag.name }}&nbsp;
        {% endfor %}
    </p>

    <hr>
    <h4>Creating a new tag</h4>
    {{ form_start(formTag) }}        
        {{ form_row(formTag.name,
            {'attr': {'placeholder': 'New tag name'}}
        )}}
        <button type="submit" class="btn btn-success">Create tag</button>
        {{ form_row(formTag._token) }}
    {{ form_end(formTag) }}
</div>
{% endblock %}
