{% extends 'base.html.twig' %}

{% block title %}Welcome to my photos gallery!{% endblock %}

{% block body %}

<div>
    {{ knp_pagination_render(pictures) }} 
</div>
<br>
<section class="pictures">
    <div class="row">
    {% for picture in pictures %}
        <div class="col-md-3">
            <div class="content">
                <a href="{{ path('photos_show', {'slugName' : picture.slugName}) }}">
                    <img src="{{ 'uploads/pictures/' ~ picture.thumbFilename }}"
                        alt="{{ picture.name }}" title="{{ picture.name }}">
                </a>
                <div class="metadata">Added the {{ picture.addedAt | date('y/m/d') }} 
                    at {{ picture.addedAt | date('H:i') }}
                </div>
            </div>
            <hr>

        </div>
    {% endfor %}
</div>
</section>
<div>
    {{ knp_pagination_render(pictures) }}
</div>

{% endblock %}
