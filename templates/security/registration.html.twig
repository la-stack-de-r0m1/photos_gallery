{% extends 'base.html.twig' %}

{% block body %}

<h1>Registration</h1>

{{ form_start(form) }}
    {{ form_row(form.username, {'attr': {'placeholder' : 'Username'}}) }}
    {{ form_row(form.email, {'attr': {'placeholder' : 'Email address'}}) }}
    {{ form_row(form.password, {'attr': {'placeholder' : 'Password'}}) }}
    {{ form_row(form.confirmPassword, {'attr': {'placeholder' : 'Confirm your password'}}) }}

    <button type="submit" class="btn btn-success">
        Registration
    </button>

{{ form_end(form) }}

{% endblock %}